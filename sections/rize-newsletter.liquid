{{ 'section-rize-newsletter.css' | asset_url | stylesheet_tag }}

<style>
  .rize-newsletter {
    background: hsla(var(--color-rize-accent), 0.1);
  }

  .rize-newsletter__content {
    text-align: center;
    animation: rizeFadeIn 0.8s ease-out;
  }

  .rize-newsletter__title {
    font-family: 'Inter', sans-serif;
    font-size: clamp(3rem, 5vw, 5rem);
    font-weight: 900;
    line-height: 1.1;
    letter-spacing: -0.02em;
    color: hsl(var(--color-rize-dark));
    margin-bottom: 1rem;
    text-transform: uppercase;
  }

  .rize-newsletter__text {
    font-family: 'Inter', sans-serif;
    font-size: 1.8rem;
    line-height: 1.4;
    color: hsla(var(--color-rize-dark), 0.7);
    margin-bottom: 3rem;
  }

  .rize-newsletter__form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    max-width: 50rem;
    margin: 0 auto;
  }

  @media screen and (min-width: 750px) {
    .rize-newsletter__form {
      flex-direction: row;
    }
  }

  .rize-newsletter__input {
    flex: 1;
    height: 4.8rem;
    padding: 0 2rem;
    font-family: 'Inter', sans-serif;
    font-size: 1.6rem;
    background: hsl(var(--color-rize-pure));
    border: 2px solid hsla(var(--color-rize-dark), 0.2);
    border-radius: 0.6rem;
    transition: border-color 0.3s ease;
  }

  .rize-newsletter__input:focus {
    outline: none;
    border-color: hsl(var(--color-rize-accent));
  }

  .rize-newsletter__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    height: 4.8rem;
    padding: 0 3rem;
    background: hsl(var(--color-rize-accent));
    color: hsl(var(--color-rize-dark));
    font-family: 'Inter', sans-serif;
    font-size: 1.6rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    text-decoration: none;
    border: none;
    border-radius: 0.6rem;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .rize-newsletter__button:hover {
    background: hsl(var(--color-rize-accent));
    transform: translateY(-2px);
    box-shadow: 0 8px 25px hsla(var(--color-rize-accent), 0.4);
  }

  .rize-newsletter__button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    transform: none;
    box-shadow: none;
  }

  .rize-newsletter__disclaimer {
    font-family: 'Inter', sans-serif;
    font-size: 1.2rem;
    color: hsla(var(--color-rize-dark), 0.6);
    margin-top: 1.5rem;
  }

  .rize-newsletter__success {
    display: none;
    text-align: center;
    animation: rizeScaleIn 0.5s ease-out;
  }

  .rize-newsletter__success-icon {
    width: 6rem;
    height: 6rem;
    background: hsl(var(--color-rize-accent));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 2rem;
  }

  .rize-newsletter__success-title {
    font-family: 'Inter', sans-serif;
    font-size: 3rem;
    font-weight: 900;
    color: hsl(var(--color-rize-dark));
    margin-bottom: 1rem;
    text-transform: uppercase;
  }

  .rize-newsletter__success-text {
    font-family: 'Inter', sans-serif;
    font-size: 1.8rem;
    color: hsla(var(--color-rize-dark), 0.7);
  }

  @keyframes rizeFadeIn {
    from {
      opacity: 0;
      transform: translateY(3rem);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes rizeScaleIn {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }
</style>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="rize-newsletter section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="rize-newsletter__content" id="newsletter-form-{{ section.id }}">
      {%- if section.settings.heading != blank -%}
        <h2 class="rize-newsletter__title">{{ section.settings.heading }}</h2>
      {%- endif -%}

      {%- if section.settings.text != blank -%}
        <p class="rize-newsletter__text">{{ section.settings.text }}</p>
      {%- endif -%}

      <form class="rize-newsletter__form" action="{{ routes.account_url }}" method="post" id="ContactFooter" accept-charset="UTF-8">
        <input type="hidden" name="form_type" value="customer">
        <input type="hidden" name="utf8" value="âœ“">
        <input type="hidden" name="contact[tags]" value="newsletter">

        <input
          type="email"
          name="contact[email]"
          class="rize-newsletter__input"
          placeholder="{{ section.settings.input_placeholder | default: 'Enter your email' }}"
          required
          autocomplete="email"
          aria-label="Email address"
        >

        <button type="submit" class="rize-newsletter__button">
          {{ section.settings.button_label | default: 'Get 10% Off' }}
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M4.16666 10H15.8333M15.8333 10L10.8333 5M15.8333 10L10.8333 15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </form>

      {%- if section.settings.disclaimer != blank -%}
        <p class="rize-newsletter__disclaimer">{{ section.settings.disclaimer }}</p>
      {%- endif -%}
    </div>

    <div class="rize-newsletter__success" id="newsletter-success-{{ section.id }}">
      <div class="rize-newsletter__success-icon">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M20 6L9 17L4 12" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </div>
      <h3 class="rize-newsletter__success-title">You're In!</h3>
      <p class="rize-newsletter__success-text">Welcome to the RIZE community. Your discount code is on its way.</p>
    </div>
  </div>
</section>

<script>
  document.getElementById('ContactFooter').addEventListener('submit', function(e) {
    e.preventDefault();
    
    const formData = new FormData(this);
    const email = formData.get('contact[email]');
    
    if (!email) return;

    // Simulate form submission
    setTimeout(() => {
      document.getElementById('newsletter-form-{{ section.id }}').style.display = 'none';
      document.getElementById('newsletter-success-{{ section.id }}').style.display = 'block';
    }, 500);
  });
</script>

{% schema %}
{
  "name": "RIZE Newsletter",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Join the Movement",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "text",
      "default": "Be the first to know about new drops, exclusive releases, and get 10% off your first order.",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "input_placeholder",
      "default": "Enter your email",
      "label": "Input placeholder"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "Get 10% Off",
      "label": "Button label"
    },
    {
      "type": "text",
      "id": "disclaimer",
      "default": "By subscribing, you agree to our privacy policy. Unsubscribe anytime.",
      "label": "Disclaimer text"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 64
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 96
    }
  ],
  "presets": [
    {
      "name": "RIZE Newsletter"
    }
  ]
}
{% endschema %}