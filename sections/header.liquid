<style>
  .rize-header {
    position: sticky;
    top: 0;
    z-index: 3;
  }

  .rize-header-wrapper {
    background: rgba(hsl(var(--color-rize-pure)), 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(hsl(var(--color-rize-dark)), 0.1);
  }

  .rize-logo {
    font-family: 'Inter', sans-serif;
    font-size: 2.4rem;
    font-weight: 900;
    letter-spacing: -0.05em;
    color: hsl(var(--color-rize-dark));
    text-decoration: none;
    text-transform: uppercase;
  }

  .rize-nav-link {
    font-family: 'Inter', sans-serif;
    font-size: 1.4rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    color: hsl(var(--color-rize-dark));
    text-decoration: none;
    text-transform: uppercase;
    transition: color 0.3s ease;
  }

  .rize-nav-link:hover {
    color: hsl(var(--color-rize-accent));
  }

  .rize-icon-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 4rem;
    height: 4rem;
    border: none;
    background: transparent;
    color: hsl(var(--color-rize-dark));
    cursor: pointer;
    transition: color 0.3s ease;
  }

  .rize-icon-button:hover {
    color: hsl(var(--color-rize-accent));
  }

  .rize-cart-count {
    position: absolute;
    top: -0.5rem;
    right: -0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 1.8rem;
    height: 1.8rem;
    background: hsl(var(--color-rize-accent));
    color: hsl(var(--color-rize-dark));
    font-size: 1rem;
    font-weight: 700;
    border-radius: 50%;
  }

  @media screen and (max-width: 749px) {
    .rize-mobile-menu {
      display: block;
      background: hsl(var(--color-rize-pure));
      border-top: 1px solid rgba(hsl(var(--color-rize-dark)), 0.1);
    }

    .rize-mobile-nav {
      padding: 2rem;
    }

    .rize-mobile-nav-link {
      display: block;
      padding: 1rem 0;
      font-family: 'Inter', sans-serif;
      font-size: 1.4rem;
      font-weight: 500;
      letter-spacing: 0.1em;
      color: hsl(var(--color-rize-dark));
      text-decoration: none;
      text-transform: uppercase;
      border-bottom: 1px solid rgba(hsl(var(--color-rize-dark)), 0.1);
    }

    .rize-mobile-nav-link:hover {
      color: hsl(var(--color-rize-accent));
    }
  }
</style>

