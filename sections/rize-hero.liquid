{{ 'section-rize-hero.css' | asset_url | stylesheet_tag }}

<style>
  .rize-hero {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    overflow: hidden;
  }

  .rize-hero__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .rize-hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to right,
      hsla(var(--color-rize-dark), 0.8),
      hsla(var(--color-rize-dark), 0.6),
      transparent
    );
  }

  .rize-hero__content {
    position: relative;
    z-index: 2;
    text-align: center;
    color: hsl(var(--color-rize-pure));
    animation: rizeHeroFadeIn 1s ease-out;
  }

  .rize-hero__title {
    font-family: 'Inter', sans-serif;
    font-size: clamp(4rem, 8vw, 8rem);
    font-weight: 900;
    line-height: 0.9;
    letter-spacing: -0.02em;
    margin-bottom: 2rem;
    text-transform: uppercase;
  }

  .rize-hero__title-accent {
    color: hsl(var(--color-rize-accent));
    animation: rizeGlowPulse 2s ease-in-out infinite;
  }

  .rize-hero__subtitle {
    font-family: 'Inter', sans-serif;
    font-size: clamp(1.6rem, 3vw, 2rem);
    font-weight: 500;
    line-height: 1.4;
    margin-bottom: 3rem;
    max-width: 60rem;
    margin-left: auto;
    margin-right: auto;
    opacity: 0.9;
  }

  .rize-hero__buttons {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    align-items: center;
  }

  @media screen and (min-width: 750px) {
    .rize-hero__buttons {
      flex-direction: row;
      justify-content: center;
    }
  }

  .rize-hero__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    padding: 1.6rem 3.2rem;
    font-family: 'Inter', sans-serif;
    font-size: 1.6rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    text-decoration: none;
    border-radius: 0.6rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    border: 2px solid transparent;
  }

  .rize-hero__button--primary {
    background: hsl(var(--color-rize-accent));
    color: hsl(var(--color-rize-dark));
    box-shadow: 0 4px 12px hsla(var(--color-rize-dark), 0.15);
  }

  .rize-hero__button--primary:hover {
    background: hsl(var(--color-rize-accent));
    transform: translateY(-2px);
    box-shadow: 0 8px 25px hsla(var(--color-rize-accent), 0.4);
  }

  .rize-hero__button--secondary {
    background: transparent;
    color: hsl(var(--color-rize-pure));
    border-color: hsl(var(--color-rize-pure));
  }

  .rize-hero__button--secondary:hover {
    background: hsl(var(--color-rize-pure));
    color: hsl(var(--color-rize-dark));
  }

  .rize-hero__scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    animation: bounce 2s infinite;
  }

  .rize-hero__scroll-indicator-dot {
    width: 0.6rem;
    height: 3rem;
    background: hsl(var(--color-rize-pure));
    border: 2px solid hsl(var(--color-rize-pure));
    border-radius: 1.5rem;
    position: relative;
  }

  .rize-hero__scroll-indicator-dot::before {
    content: '';
    position: absolute;
    top: 0.5rem;
    left: 50%;
    transform: translateX(-50%);
    width: 0.4rem;
    height: 1.2rem;
    background: hsl(var(--color-rize-pure));
    border-radius: 0.2rem;
    animation: pulse 2s infinite;
  }

  @keyframes rizeHeroFadeIn {
    from {
      opacity: 0;
      transform: translateY(3rem);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes rizeGlowPulse {
    0%, 100% {
      text-shadow: 0 0 2rem hsla(var(--color-rize-accent), 0.3);
    }
    50% {
      text-shadow: 0 0 4rem hsla(var(--color-rize-accent), 0.6);
    }
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateX(-50%) translateY(0);
    }
    40% {
      transform: translateX(-50%) translateY(-1rem);
    }
    60% {
      transform: translateX(-50%) translateY(-0.5rem);
    }
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }
</style>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="rize-hero section-{{ section.id }}-padding">
  {%- if section.settings.image -%}
    <div class="rize-hero__background" style="background-image: url('{{ section.settings.image | image_url: width: 1920 }}');">
      <div class="rize-hero__overlay"></div>
    </div>
  {%- endif -%}

  <div class="page-width">
    <div class="rize-hero__content">
      {%- if section.settings.heading != blank -%}
        <h1 class="rize-hero__title">
          {%- assign heading_parts = section.settings.heading | split: '|' -%}
          {%- if heading_parts.size > 1 -%}
            {{ heading_parts.first }}
            <span class="rize-hero__title-accent">{{ heading_parts.last }}</span>
          {%- else -%}
            {{ section.settings.heading }}
          {%- endif -%}
        </h1>
      {%- endif -%}

      {%- if section.settings.text != blank -%}
        <p class="rize-hero__subtitle">{{ section.settings.text }}</p>
      {%- endif -%}

      <div class="rize-hero__buttons">
        {%- if section.settings.button_label != blank -%}
          <a href="{{ section.settings.button_link }}" class="rize-hero__button rize-hero__button--primary">
            {{ section.settings.button_label }}
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M4.16666 10H15.8333M15.8333 10L10.8333 5M15.8333 10L10.8333 15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
        {%- endif -%}

        {%- if section.settings.button_label_2 != blank -%}
          <a href="{{ section.settings.button_link_2 }}" class="rize-hero__button rize-hero__button--secondary">
            {{ section.settings.button_label_2 }}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>

  {%- if section.settings.show_scroll_indicator -%}
    <div class="rize-hero__scroll-indicator">
      <div class="rize-hero__scroll-indicator-dot"></div>
    </div>
  {%- endif -%}
</section>

{% schema %}
{
  "name": "RIZE Hero",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "heading",
      "default": "Define Your|Ascent",
      "label": "Heading",
      "info": "Use | to separate the regular text from the accent text"
    },
    {
      "type": "textarea",
      "id": "text",
      "default": "Built for movement. Designed for the moment. Discover streetwear that moves with your ambition.",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "Shop New Arrivals",
      "label": "Primary button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Primary button link"
    },
    {
      "type": "text",
      "id": "button_label_2",
      "default": "Explore Collections",
      "label": "Secondary button label"
    },
    {
      "type": "url",
      "id": "button_link_2",
      "label": "Secondary button link"
    },
    {
      "type": "checkbox",
      "id": "show_scroll_indicator",
      "default": true,
      "label": "Show scroll indicator"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "RIZE Hero"
    }
  ]
}
{% endschema %}