{% comment %}
  Renders the footer section
{% endcomment %}

{{ 'section-footer.css' | asset_url | stylesheet_tag }}

<style>
  .rize-footer {
    background: hsl(var(--color-rize-dark));
    color: hsl(var(--color-rize-pure));
  }

  .rize-footer__content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 4rem;
  }

  @media screen and (min-width: 750px) {
    .rize-footer__content {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (min-width: 990px) {
    .rize-footer__content {
      grid-template-columns: 2fr repeat(3, 1fr);
    }
  }

  .rize-footer__brand {
    max-width: 40rem;
  }

  .rize-footer__logo {
    font-family: 'Inter', sans-serif;
    font-size: 3rem;
    font-weight: 900;
    letter-spacing: -0.02em;
    color: hsl(var(--color-rize-pure));
    margin-bottom: 2rem;
    text-transform: uppercase;
  }

  .rize-footer__description {
    font-family: 'Inter', sans-serif;
    font-size: 1.6rem;
    line-height: 1.5;
    color: hsla(var(--color-rize-pure), 0.8);
    margin-bottom: 2rem;
  }

  .rize-footer__social {
    display: flex;
    gap: 1.5rem;
  }

  .rize-footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 4rem;
    height: 4rem;
    color: hsl(var(--color-rize-pure));
    transition: color 0.3s ease;
  }

  .rize-footer__social-link:hover {
    color: hsl(var(--color-rize-accent));
  }

  .rize-footer__section-title {
    font-family: 'Inter', sans-serif;
    font-size: 1.6rem;
    font-weight: 700;
    color: hsl(var(--color-rize-accent));
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 2rem;
  }

  .rize-footer__links {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .rize-footer__link-item {
    margin-bottom: 1rem;
  }

  .rize-footer__link {
    font-family: 'Inter', sans-serif;
    font-size: 1.4rem;
    color: hsla(var(--color-rize-pure), 0.8);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .rize-footer__link:hover {
    color: hsl(var(--color-rize-accent));
  }

  .rize-footer__bottom {
    border-top: 1px solid hsla(var(--color-rize-pure), 0.2);
    padding-top: 2rem;
    margin-top: 4rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    align-items: center;
    text-align: center;
  }

  @media screen and (min-width: 750px) {
    .rize-footer__bottom {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }
  }

  .rize-footer__copyright {
    font-family: 'Inter', sans-serif;
    font-size: 1.4rem;
    color: hsla(var(--color-rize-pure), 0.6);
  }

  .rize-footer__legal {
    display: flex;
    gap: 2rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  @media screen and (min-width: 750px) {
    .rize-footer__legal {
      justify-content: flex-end;
    }
  }

  .rize-footer__legal-link {
    font-family: 'Inter', sans-serif;
    font-size: 1.4rem;
    color: hsla(var(--color-rize-pure), 0.6);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .rize-footer__legal-link:hover {
    color: hsl(var(--color-rize-accent));
  }
</style>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<footer class="rize-footer section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="rize-footer__content">
      {%- if section.settings.show_brand_info -%}
        <div class="rize-footer__brand">
          <h2 class="rize-footer__logo">RIZE</h2>
          
          {%- if section.settings.brand_description != blank -%}
            <p class="rize-footer__description">{{ section.settings.brand_description }}</p>
          {%- endif -%}

          <div class="rize-footer__social">
            {%- if settings.social_instagram_link != blank -%}
              <a href="{{ settings.social_instagram_link }}" class="rize-footer__social-link" aria-label="Instagram">
